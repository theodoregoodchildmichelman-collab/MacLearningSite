{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Macedonian Lesson Structure",
    "type": "object",
    "properties": {
        "lesson_meta": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "title_mk": {
                    "type": "string"
                },
                "title_en": {
                    "type": "string"
                },
                "page_start": {
                    "type": "integer"
                }
            },
            "required": [
                "id",
                "title_mk",
                "page_start"
            ]
        },
        "dialogues": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "lines": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "speaker": {
                                    "type": "string"
                                },
                                "mk_text": {
                                    "type": "string"
                                },
                                "en_translation": {
                                    "type": "string"
                                },
                                "audio_id": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "vocabulary": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "mk_word": {
                        "type": "string"
                    },
                    "en_definition": {
                        "type": "string"
                    },
                    "part_of_speech": {
                        "enum": [
                            "noun",
                            "verb",
                            "adjective",
                            "adverb",
                            "pronoun",
                            "preposition",
                            "phrase"
                        ]
                    },
                    "gender": {
                        "enum": [
                            "m",
                            "f",
                            "n",
                            null
                        ]
                    },
                    "plural_form": {
                        "type": "string"
                    }
                }
            }
        },
        "grammar_notes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "topic": {
                        "type": "string"
                    },
                    "explanation_markdown": {
                        "type": "string"
                    },
                    "examples": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "mk": {
                                    "type": "string"
                                },
                                "en": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}